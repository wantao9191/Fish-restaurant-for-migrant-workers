/* miniprogram/pages/forum/index/index.wxss */
.border {
  border-bottom: 1px solid #ddd;
  padding: 24rpx;
}

.ql-container {
  height: auto;
  font-size: 25rpx;
  line-height: 32rpx;
}

.forum-header {
  font-weight: bold;
  font-size: 26rpx;
  line-height: 40rpx;
  background: #fff;
}

.forum-main {
  background: #fff;
  border-bottom: 0;
}

.forum-user {
  background: #fff;
  display: flex;
  justify-content: space-between;
}

.forum-user-aside {
  display: flex;
  align-items: center;
}

.header {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.text {
  font-size: 24rpx;
  color: #39A7D2;
}

.text.label {
  font-size: 20rpx;
  color: #999;
  margin-top: 12rpx;
}

.time {
  border-bottom: 1px solid #ddd;
  padding-bottom: 24rpx;
}

.time,
.tools {
  text-align: right;
}

.tools {
  background: #fff;
  padding: 0 24rpx 24rpx;
}

.tools .iconfont {
  display: inline-block;
  margin-left: 24rpx;
  color: #888;
}

.reverse {
  transform: rotate(180deg);
}
.forum-list-item:nth-child(even){
  background: #fff;
}
.forum-list-item:nth-child(odd),
.forum-list-item:nth-child(odd) .forum-user,
.forum-list-item:nth-child(odd) .forum-main,
.forum-list-item:nth-child(odd) .tools,
.forum-list-item:nth-child(odd) .forum-list-item {
  background: #f1ecec;
}

.replay-wrap {
  margin:0 24rpx 24rpx;
}
.forum-list-item:nth-child(even) .replay-wrap .tools {
  background: #ddd;
  border-bottom:1px solid #888 ;
}
.forum-list-item:nth-child(odd) .replay-wrap .tools{
  background: #fff;
}
.forum-list-item:nth-child(even) .replay-list {
  background: #ddd;
}
.forum-list-item:nth-child(odd) .replay-list {
  background: #fff;
}
.replay-list {
  padding: 24rpx 24rpx 0;
}
.replay-list:last-child .tools {
  border-bottom: 0 !important;
}

.forum-list-item:nth-child(even),
.forum-list-item:nth-child(even) .forum-user,
.forum-list-item:nth-child(even) .forum-main,
.forum-list-item:nth-child(even) .forum-list-item {
  background: #fff;
}
.replay-user-aside {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.replay-user-aside .text {
  vertical-align: top;
}