.container {
  width: 100vw;
  height: 100vh;
  color: #fff;
  font-size: 50rpx;
  background: linear-gradient(#0F5095, #56DD7B);
  text-align: center;
}

.container>view {
  margin-bottom: 40rpx;
}

.rootate-right {
  transform: rotateZ(10deg);
}

.rootate-left {
  transform: rotateZ(-10deg);
}

.word-right {
  text-align: right;
  padding-right: 50rpx;
}

.word-left {
  text-align: left;
  padding-left: 50rpx;
}

.logo {
  margin-bottom: 40rpx;
  border-radius: 10rpx;
}

.footer {
  font-size: 32rpx;
  margin-top: 80rpx;
}

input {
  border: 0;
  border-bottom: 1px solid #666;
  max-width: 240rpx;
  margin: 0 auto;
  color: #333;
}

.dialog-content {
  text-align: center;
  font-size: 26rpx;
  color: #888;
}

.info-item {
  margin-bottom: 24rpx;
}

.info-item.avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 12rpx;
}

.info-item input {
  margin-top: 12rpx;
  font-size: 24rpx;
}

.info-item .tips {
  font-size: 20rpx;
  color: #FFCC02;
}

.picker-item {
  font-size: 24rpx;
  color: #333;
  margin-top: 12rpx;
  border-bottom: 1px solid #333;
  max-width: 280rpx;
  margin: 0 auto;
  padding: 12rpx;
  height:20rpx;
}